{
  "extends": [
    "eslint:recommended",
    "google",
    // "plugin:flowtype/recommended",
    "prettier"
    // "prettier/flowtype"
  ],
  "plugins": [
    // "flowtype",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "eqeqeq": ["warn", "smart"],
    "prettier/prettier": ["warn", {
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "semi": false,
      "parser": "flow"
    }]
  }
}