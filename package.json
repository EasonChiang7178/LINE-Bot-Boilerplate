{
  "name": "LINE-Bot-Boilerplate",
  "version": "0.1.0",
  "description": "LINE-Bot Boilerplate by Koa2",
  "main": "dist/app.js",
  "author": "Eason Chiang",
  "license": "MIT",
  "engines": {
    "node": "^7.6.0",
    "npm": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EasonChiang7178/LINE-Bot-Boilerplate.git"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/app.js",
    "test": "npm run flow-status && npm run eslint",
    "flow-start": "flow start",
    "flow-stop": "flow start",
    "flow-status": "flow status",
    "eslint": "eslint src/**",
    "prettier": "prettier --single-quote --trailing-comma all --parser flow --no-semi --write \"*.js\"",
    "start": "node dist/app.js",
    "build": "flow-remove-types src/ -d dist/",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "cross-env": "^5.0.0",
    "dotenv-safe": "^4.0.4",
    "koa": "^2.2.0",
    "koa-router": "^7.1.1",
    "koa2-better-body": "^0.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-prettier": "^2.1.1",
    "flow-bin": "^0.46.0",
    "flow-remove-types": "^1.2.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.3.1",
    "prettier-eslint": "^6.2.3"
  }
}